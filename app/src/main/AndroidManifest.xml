    <application
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_scheme"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Speech"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name="com.omegaki113r.pksoftwaresolutions.shalintha.translator.Main2Activity"></activity>
        <activity android:name="com.omegaki113r.pksoftwaresolutions.shalintha.translator.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.omegaki113r.pksoftwaresolutions.shalintha.translator.MainActivity"></activity>

        <service android:name="com.omegaki113r.pksoftwaresolutions.shalintha.translator.SpeechService" />

        <meta-data
            android:name="android.support.VERSION"
            android:value="26.1.0"
            tools:node="replace"
            tools:replace="android:value" />
    </application>

</manifest>